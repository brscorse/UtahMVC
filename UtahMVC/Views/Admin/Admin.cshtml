@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
}

@model CrashesViewModel

<div class="container-fluid">
    <div class="row m-1 p-4">
        <div class="col-2">
            <vc:admin-filter></vc:admin-filter>
        </div>

        <div class="col-8">
            <!-- crash table -->
            @foreach (Crash c in Model.UtahCrashData)
            {
                <partial name="AdminCrashSummary" model="c" />
            }
        </div>
    </div>

    <!-- pagination at bottom of page-->
    <div class="container-fluid">
        <div class="col-12" style="text-align:center">
            <div class="row">
                <div class="col-4 button text-right">
                    <a type="button" class="btn btn-primary" asp-controller="Admin" asp-action="Admin" asp-route-PageNum="1">First</a>
                </div>

                <div page-blah="@Model.PageInfo" page-action="Admin" page-class="btn"
                     page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
                     page-classes-enabled="true"
                     class="col-4 btn-group">
                </div>

                <div class="col-4 button text-left">
                    <a type="button" class="btn btn-primary" asp-controller="Admin" asp-action="Admin" asp-route-PageNum="@Model.PageInfo.TotalPages">Last</a>
                </div>
            </div>
        </div>
        <br />
    </div>
</div>
