@{
    ViewData["Title"] = "Admin";
    Layout = "_AdminLayout";
}

@model CrashesViewModel

<div class="container-fluid">
    <div class="row m-1 p-4">
        <div class="col-2">
            <vc:adminfilter></vc:adminfilter>
        </div>

        <div class="col-10">
            <!-- crash table -->
            @foreach (Crash c in Model.UtahCrashData)
            {
                <partial name="AdminCrashSummary" model="c" />
            }
        </div>
    </div>



    <div class="row">

        <div class="col-1 ml-4">
            <a type="button" class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="Admin" asp-route-PageNum="1">First</a>
        </div>

        <div page-blah="@Model.PageInfo" page-action="Admin" page-class="btn"
             page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
             page-classes-enabled="true"
             class="btn-group pull-right m-1">
        </div>

        <div class="ml-5">
            <a type="button" class="btn btn-primary btn-sm" asp-controller="Admin" asp-action="Admin" asp-route-PageNum="@Model.PageInfo.TotalPages">Last</a>
        </div>
    </div>

    <br />
</div>
