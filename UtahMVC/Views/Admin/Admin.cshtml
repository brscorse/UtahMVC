@{
    ViewData["Title"] = "Admin";
}

@model CrashesViewModel
    <navbar>
        <div class="bg-secondary text-white p-2">

            <div class="container-fluid">

                <div class="row">
                    <div class="col">
                        <span class="navbar-brand m-lg-2">Utah MVC Administration</span>
                    </div>

                    <div class="col-2 text-right">
                        <a class="btn btn-sm btn-danger" href="/account/logout">Log Out</a>

                    </div>
                </div>

            </div>

        </div>
    </navbar>

    @*tabs to switch between books and purchases*@

    <div class="container-fluid">
        <div class="row m-1 p-4">
            <div class="col-2">
                <vc:adminfilter></vc:adminfilter>
            </div>

            <div class="col-10">
                <!-- crash table -->
                @foreach (Crash c in Model.UtahCrashData)
                {
                    <partial name="AdminCrashSummary" model="c" />
                }
            </div>
        </div>

        <div page-blah="@Model.PageInfo" page-action="Crashes" page-class="btn"
             page-class-normal="btn-outline-dark" page-class-selected="btn-primary"
             page-classes-enabled="true"
             class="btn-group pull-right m-1">
        </div>
    </div>