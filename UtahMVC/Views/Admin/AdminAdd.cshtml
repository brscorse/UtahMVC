                <option value="17">17</option>
                <option value="18">18</option>
                <option value="19">19</option>
                <option value="20">20</option>
                <option value="21">21</option>
                <option value="22">22</option>
                <option value="23">23</option>
                <option value="24">24</option>
                <option value="25">25</option>
                <option value="26">26</option>
                <option value="27">27</option>
                <option value="28">28</option>
                <option value="29">29</option>
                <option value="30">30</option>
                <option value="31">31</option>
            </select><br /><br />
        </div>

        <div class="form-group col-md-3">
            <label class="form-label" asp-for="CRASH_MONTH">Severity: </label>
            <select class="form-control" asp-for="CRASH_MONTH">
                <option>Select a Month</option>
                <option value="1">January</option>
                <option value="2">February</option>
                <option value="3">March</option>
                <option value="4">April</option>
                <option value="5">May</option>
                <option value="6">June</option>
                <option value="7">July</option>
                <option value="8">August</option>
                <option value="9">September</option>
                <option value="10">October</option>
                <option value="11">November</option>
                <option value="12">December</option>
            </select><br /><br />
        </div>

        <div class="form-group col-md-3">
            <label class="form-label" asp-for="CRASH_YEAR">Crash Year: </label>
            <input class="form-control" asp-for="CRASH_YEAR" /><br /><br />
        </div>

        <div class="form-group col-md-3">
            <label class="form-label" asp-for="CRASH_SEVERITY_ID">Severity: </label>
            <select class="form-control" asp-for="CRASH_SEVERITY_ID">
                <option>Select a Severity</option>
                <option value="1">1</option>
                <option value="2">2</option>
                <option value="3">3</option>
                <option value="4">4</option>
                <option value="5">5</option>
            </select><br /><br />
        </div>

        <div class="form-group col-md-9">
            <p class="form-label"> 1: No Injury 2: possible injury 3: suspected minor injury 4: suspected serious injury 5: fatal </p>
        </div>

        <div class="form-group col-md-3">
            <label class="form-label" asp-for="ROUTE">Route: </label>
            <input class="form-control" asp-for="ROUTE" /><br /><br />
        </div>

        <div class="form-group col-md-3">
            <label class="form-label" asp-for="MILEPOINT">Milepoint: </label>
            <input class="form-control" asp-for="MILEPOINT" /><br /><br />
        </div>

        <div class="form-group col-md-3">
            <label class="form-label" asp-for="LAT_UTM_Y">Latitude: </label>
            <input class="form-control" asp-for="LAT_UTM_Y" /><br /><br />
        </div>

        <div class="form-group col-md-3">
            <label class="form-label" asp-for="LONG_UTM_X">Longitude: </label>
            <input class="form-control" asp-for="LONG_UTM_X" /><br /><br />
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="WORK_ZONE_RELATED">Work Zone Related?</label>
            <input class="form-control" type="checkbox" asp-for="WORK_ZONE_RELATED" />
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="PEDESTRIAN_INVOLVED">Pedestrian Involved?</label>
            <input class="form-control" type="checkbox" asp-for="PEDESTRIAN_INVOLVED" />
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="BICYCLIST_INVOLVED">Bicyclist Involved?</label>
            <input class="form-control" type="checkbox" asp-for="BICYCLIST_INVOLVED" />
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="MOTORCYCLE_INVOLVED">Motorcycle Involved?</label>
            <input class="form-control" type="checkbox" asp-for="MOTORCYCLE_INVOLVED" />
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="IMPROPER_RESTRAINT">Improper Restraint?</label>
            <input class="form-control" type="checkbox" asp-for="IMPROPER_RESTRAINT" />
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="UNRESTRAINED">Unrestrained?</label>
            <input class="form-control" type="checkbox" asp-for="UNRESTRAINED" />
        </div>

        <div class="form-group col-md-2">
            <label class="form-label" asp-for="DUI">DUI?</label>
            <input class="form-control" type="checkbox" asp-for="DUI" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="INTERSECTION_RELATED">Intersection Related?</label>
            <input class="form-control" type="checkbox" asp-for="INTERSECTION_RELATED" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="WILD_ANIMAL_RELATED">Wild Animal Related?</label>
            <input class="form-control" type="checkbox" asp-for="WILD_ANIMAL_RELATED" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="DOMESTIC_ANIMAL_RELATED">Domestic Animal Related?</label>
            <input class="form-control" type="checkbox" asp-for="DOMESTIC_ANIMAL_RELATED" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="OVERTURN_ROLLOVER">Overturn/Rollover?</label>
            <input class="form-control" type="checkbox" asp-for="OVERTURN_ROLLOVER" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED">Commercial Vehicle?</label>
            <input class="form-control" type="checkbox" asp-for="COMMERCIAL_MOTOR_VEH_INVOLVED" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="TEENAGE_DRIVER_INVOLVED">Teenage Driver?</label>
            <input class="form-control" type="checkbox" asp-for="TEENAGE_DRIVER_INVOLVED" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="OLDER_DRIVER_INVOLVED">Older Driver?</label>
            <input class="form-control" type="checkbox" asp-for="OLDER_DRIVER_INVOLVED" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="NIGHT_DARK_CONDITION">At Night?</label>
            <input class="form-control" type="checkbox" asp-for="NIGHT_DARK_CONDITION" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="SINGLE_VEHICLE">Single Vehicle?</label>
            <input class="form-control" type="checkbox" asp-for="SINGLE_VEHICLE" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="DISTRACTED_DRIVING">Distracted Driving?</label>
            <input class="form-control" type="checkbox" asp-for="DISTRACTED_DRIVING" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="DROWSY_DRIVING">Drowsy Driver?</label>
            <input class="form-control" type="checkbox" asp-for="DROWSY_DRIVING" />
        </div>

        <div class="form-group">
            <label class="form-label" asp-for="ROADWAY_DEPARTURE">Roadway Departure?</label>
            <input class="form-control" type="checkbox" asp-for="ROADWAY_DEPARTURE" />
        </div>

        <input type="hidden" asp-for="CRASH_ID" value="@ViewBag.Id" />

        <button class="btn btn-sm btn-primary" type="submit">Submit</button>
    </form>
</div>
