@{
    Layout = "";
    ViewData["Title"] = "Form";
}

@model Crash

    <head>

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <!-- bootstrap layout-->
        <link rel="stylesheet" href="~/bootstrap/plugins/bootstrap/css/bootstrap.css" />
        <!-- Icofont Css -->
        <link rel="stylesheet" href="~/bootstrap/plugins/fontawesome/css/all.css">
        <!-- animate.css -->
        <link rel="stylesheet" href="~/bootstrap/plugins/animate-css/animate.css">
        <!-- Icofont -->
        <link rel="stylesheet" href="~/bootstrap/plugins/icofont/icofont.css">
        <!-- Main Stylesheet -->
        <link rel="stylesheet" href="~/bootstrap/css/style.css">
        <link rel="stylesheet" href="~/css/site.css" />
    </head>

<h1>Crash @Model.CRASH_ID</h1>
<div class="container">
    <form class="row g-3" method="post">
      
        <div asp-validation-summary="All"></div>

        <div class="form-group col-12">
            <label class="form-label" asp-for="MAIN_ROAD_NAME">Address: </label>
            <input class="form-control" asp-for="MAIN_ROAD_NAME" /><br /><br />
        </div>

        <div class="form-group col-md-6">
            <label class="form-label" asp-for="CITY">City: </label>
            <input class="form-control" asp-for="CITY" /><br /><br />
        </div>

        <div class="form-group col-md-6">
            <label class="form-label" asp-for="COUNTY_NAME">County: </label>
            <select class="form-control" asp-for="COUNTY_NAME">
