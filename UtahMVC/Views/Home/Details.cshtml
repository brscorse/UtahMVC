@{
}

@model Crash


<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h3>@Model.CRASH_ID</h3>
    </div>

    <h3>Main Info:</h3>
    <ul>
        <li>Date: @Model.CRASH_MONTH / @Model.CRASH_DAY / @Model.CRASH_YEAR</li>
        <li>Hour: @Model.CRASH_HOUR</li>
        <li>Route: @Model.ROUTE</li>
        <li>Milepoint: @Model.MILEPOINT</li>
        <li>Latitude: @Model.LAT_UTM_Y</li>
        <li>Longitude: @Model.LONG_UTM_X</li>
        <li>Road: @Model.MAIN_ROAD_NAME</li>
        <li>City: @Model.CITY</li>
        <li>County: @Model.COUNTY_NAME</li>
        <li>Crash Severity: @Model.CRASH_SEVERITY_ID</li>
    </ul>
    <br />

    <h3>Involvements:</h3>
    <ul>
        <li>Work Zone: @Model.WORK_ZONE_RELATED</li>
        <li>Pedastrian: @Model.PEDESTRIAN_INVOLVED</li>
        <li>Bicyclists: @Model.BICYCLIST_INVOLVED</li>
        <li>Mortorcycle: @Model.MOTORCYCLE_INVOLVED</li>
        <li>Improper Restraint: @Model.IMPROPER_RESTRAINT</li>
        <li>Unrestrained: @Model.UNRESTRAINED</li>
        <li>DUI: @Model.DUI</li>
        <li>Intersection: @Model.INTERSECTION_RELATED</li>
        <li>Wild Animal: @Model.WILD_ANIMAL_RELATED</li>
        <li>Domestic Animal: @Model.DOMESTIC_ANIMAL_RELATED</li>
        <li>Rollover: @Model.OVERTURN_ROLLOVER</li>
        <li>Commercial Vehicle: @Model.COMMERCIAL_MOTOR_VEH_INVOLVED</li>
        <li>Teenage Driver: @Model.TEENAGE_DRIVER_INVOLVED</li>
        <li>Elderly Driver: @Model.OLDER_DRIVER_INVOLVED</li>
        <li>Night time: @Model.NIGHT_DARK_CONDITION</li>
        <li>Single Driver: @Model.SINGLE_VEHICLE</li>
        <li>Distrated Driver: @Model.DISTRACTED_DRIVING</li>
        <li>Drowsy Driver: @Model.DROWSY_DRIVING</li>
        <li>Roadway Departure: @Model.ROADWAY_DEPARTURE</li>

    </ul>
</div>