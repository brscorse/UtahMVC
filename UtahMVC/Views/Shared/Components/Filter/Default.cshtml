
@model IEnumerable<string>

<!-- this is for the filter section on the left hand side of the home page-->
<div class="d-grid p-25">
    <a asp-controller="Home" asp-action="Index" asp-route-category="" asp-route-PageNum="1" class="btn btn-outline-secondary">All Crashes</a>

    @foreach (string f in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-category="@f"
           class="btn @(ViewBag.SelectedType == f ? "btn-primary" : "btn-outline-secondary")">@f</a>
    }
</div>