@{
}


@model Crash

<div class="card card-outline-primary m-1 p-1">
    <div class="bg-light p-1">
        <h3>@Model.CRASH_ID</h3>
    </div>

    <ul>
        <li>Date/Time: @Model.CRASH_DATETIME</li>
        <li>Route: @Model.ROUTE</li>
        <li>Road: @Model.MAIN_ROAD_NAME</li>
        <li>City: @Model.CITY</li>
        <li>County: @Model.COUNTY_NAME</li>
        <li>Crash Severity: @Model.CRASH_SEVERITY_ID</li>
        <li asp-controller="Home" asp-action="Details" asp-route-id="@Model.CRASH_ID">Details</li>
    </ul>
</div>

